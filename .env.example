# Database Configuration
DATABASE_URL="postgresql://courseforge:courseforge_dev_password@localhost:5432/courseforge"

# Redis Configuration
REDIS_URL="redis://:courseforge_redis_password@localhost:6379"

# JWT Configuration
JWT_SECRET="your_super_secure_jwt_secret_key_change_this_in_production"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="your_super_secure_refresh_token_secret_change_this_in_production"
REFRESH_TOKEN_EXPIRES_IN="30d"

# AI API Keys
OPENAI_API_KEY="your_openai_api_key_here"
CLAUDE_API_KEY="your_claude_api_key_here"
HUGGINGFACE_API_KEY="your_huggingface_api_key_here"
COHERE_API_KEY="your_cohere_api_key_here"

# Payment Processing
STRIPE_SECRET_KEY="your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="your_stripe_webhook_secret_here"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="your_stripe_publishable_key_here"

# File Storage (MinIO/S3)
STORAGE_PROVIDER="minio" # or "s3"
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="courseforge_minio"
MINIO_SECRET_KEY="courseforge_minio_password"
MINIO_BUCKET_NAME="courseforge-uploads"
MINIO_USE_SSL="false"

# AWS S3 (if using S3 instead of MinIO)
AWS_REGION="us-east-1"
AWS_ACCESS_KEY_ID="your_aws_access_key_id"
AWS_SECRET_ACCESS_KEY="your_aws_secret_access_key"
S3_BUCKET_NAME="courseforge-uploads"

# Email Configuration
EMAIL_PROVIDER="smtp" # or "sendgrid", "mailgun"
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_email_password"
SMTP_FROM="noreply@courseforge.com"

# SendGrid (if using SendGrid)
SENDGRID_API_KEY="your_sendgrid_api_key"

# Application Configuration
NODE_ENV="development"
PORT="3001"
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Frontend Environment Variables
NEXT_PUBLIC_API_URL="http://localhost:3001"
NEXT_PUBLIC_APP_NAME="CourseForge"
NEXT_PUBLIC_APP_DESCRIPTION="AI-Powered Course Creation Platform"

# Security
BCRYPT_SALT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload Limits
MAX_FILE_SIZE="100MB"
ALLOWED_FILE_TYPES="pdf,docx,doc,txt,md,jpg,jpeg,png,gif,mp4,mp3,wav"

# AI Configuration
DEFAULT_AI_MODEL="gpt-4"
AI_TEMPERATURE="0.7"
AI_MAX_TOKENS="2000"
AI_TIMEOUT="30000" # 30 seconds

# Logging
LOG_LEVEL="info" # error, warn, info, debug
LOG_FORMAT="combined" # combined, common, dev, short, tiny

# Session Configuration
SESSION_SECRET="your_session_secret_key_change_this_in_production"
SESSION_COOKIE_SECURE="false" # set to true in production with HTTPS
SESSION_COOKIE_MAX_AGE="604800000" # 7 days in milliseconds

# Development
DEBUG="courseforge:*"
ENABLE_SWAGGER="true"
ENABLE_CORS="true"

# Analytics & Monitoring
GOOGLE_ANALYTICS_ID="your_google_analytics_id"
SENTRY_DSN="your_sentry_dsn"

# Feature Flags
ENABLE_AI_AGENTS="true"
ENABLE_VIDEO_STUDIO="true"
ENABLE_MULTILINGUAL="true"
ENABLE_PRESENTATION_GENERATOR="true"
ENABLE_ANALYTICS="true"
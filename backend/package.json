{
  "name": "courseforge-backend",
  "version": "1.0.0",
  "description": "CourseForge Backend API - AI-Powered Course Creation SaaS",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:migrate:reset": "prisma migrate reset",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:studio": "prisma studio",
    "prisma:generate": "prisma generate",
    "docker:build": "docker build -t courseforge-backend .",
    "docker:run": "docker run -p 3001:3001 courseforge-backend"
  },
  "keywords": [
    "courseforge",
    "education",
    "ai",
    "course-creation",
    "saas",
    "api",
    "express",
    "typescript"
  ],
  "author": "CourseForge Team",
  "license": "MIT",

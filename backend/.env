# Environment
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL="postgresql://courseforge:courseforge_dev_password@localhost:5432/courseforge"

# Redis
REDIS_URL="redis://:courseforge_redis_password@localhost:6379"
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=courseforge_redis_password
REDIS_DB=0
REDIS_KEY_PREFIX=courseforge:

# JWT Configuration
JWT_SECRET="super_secure_jwt_secret_change_this_in_production_12345"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_SECRET="super_secure_refresh_token_secret_change_this_in_production_67890"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Application URLs
FRONTEND_URL="http://localhost:3000"
BACKEND_URL="http://localhost:3001"

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_SECURE="false"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password_here"
SMTP_FROM="noreply@courseforge.com"

# AI API Keys (Add your actual keys)
OPENAI_API_KEY="your_openai_api_key_here"
CLAUDE_API_KEY="your_claude_api_key_here"
HUGGINGFACE_API_KEY="your_huggingface_api_key_here"
COHERE_API_KEY="your_cohere_api_key_here"

# Payment Processing
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"

# File Storage (MinIO for development)
STORAGE_PROVIDER="minio"
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="courseforge_minio"
MINIO_SECRET_KEY="courseforge_minio_password"
MINIO_BUCKET_NAME="courseforge-uploads"
MINIO_USE_SSL="false"

# Security
BCRYPT_SALT_ROUNDS="12"
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# File Upload
MAX_FILE_SIZE="100MB"
ALLOWED_FILE_TYPES="pdf,docx,doc,txt,md,jpg,jpeg,png,gif,mp4,mp3,wav"

# AI Configuration
DEFAULT_AI_MODEL="gpt-4"
AI_TEMPERATURE="0.7"
AI_MAX_TOKENS="2000"
AI_TIMEOUT="30000"

# Logging
LOG_LEVEL="info"
DEBUG="courseforge:*"

# Development
ENABLE_SWAGGER="true"
ENABLE_CORS="true"
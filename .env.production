# Production Environment Configuration
# Copy this to .env.production and fill in the actual values

# Application Environment
NODE_ENV=production
LOG_LEVEL=info

# Application URLs (Replace with your actual domains)
FRONTEND_URL=https://your-domain.com
BACKEND_URL=https://api.your-domain.com
NEXT_PUBLIC_API_URL=https://api.your-domain.com

# Database Configuration
POSTGRES_DB=courseforge
POSTGRES_USER=courseforge
POSTGRES_PASSWORD=your_super_secure_postgres_password_here

# Redis Configuration
REDIS_PASSWORD=your_super_secure_redis_password_here

# JWT Secrets (Generate strong secrets for production)
JWT_SECRET=your_super_secure_jwt_secret_key_for_production_at_least_32_chars
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your_super_secure_refresh_token_secret_for_production_at_least_32_chars
REFRESH_TOKEN_EXPIRES_IN=30d

# AI API Keys (Add your actual API keys)
OPENAI_API_KEY=your_actual_openai_api_key_here
CLAUDE_API_KEY=your_actual_claude_api_key_here
HUGGINGFACE_API_KEY=your_actual_huggingface_api_key_here
COHERE_API_KEY=your_actual_cohere_api_key_here

# Payment Processing (Stripe Production Keys)
STRIPE_SECRET_KEY=sk_live_your_stripe_live_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_live_publishable_key_here

# File Storage (MinIO/S3)
MINIO_ACCESS_KEY=your_minio_access_key_here
MINIO_SECRET_KEY=your_super_secure_minio_secret_key_here
MINIO_BUCKET_NAME=courseforge-uploads

# Email Configuration (Production SMTP)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username@your-domain.com
SMTP_PASS=your_smtp_app_password_here
SMTP_FROM=noreply@your-domain.com

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration
DEFAULT_AI_MODEL=gpt-4
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_TIMEOUT=30000